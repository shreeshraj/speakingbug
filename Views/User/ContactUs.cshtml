@{
    ViewBag.Title = "Welcome To Learning Lab";
}
@model CoreProject.Models.ContactEntity
<div class="container" style="margin-top:5%">
    <!--Section: Contact v.2-->
    <section class="mb-4">
        <!--Section heading-->
        <h3 class="h1-responsive font-weight-bold text-center my-4">Contact us</h3>
        <!--Section description-->
        <hr/>
        <div class="row">

            <!--Grid column-->
            <div class="col-md-12 mb-md-0 mb-5">
                <form id="contact-form">

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                @Html.TextBoxFor(x => x.Name, "", new { @class = "form-control" })

                                <label for="Name" class="">Your name</label>
                            </div>
                            @Html.ValidationMessageFor(x => x.Name,"", new { @class = "text-danger" })
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                @Html.TextBoxFor(x => x.Email, "", new { @class = "form-control" })

                                <label for="Email" class="">Your email</label>
                            </div>
                            @Html.ValidationMessageFor(x => x.Email,"", new { @class = "text-danger" })
                        </div>
                        <!--Grid column-->

                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                @Html.TextBoxFor(x => x.Subject, "", new { @class = "form-control" })
                                <label for="Subject" class="">Subject</label>
                            </div>
                            @Html.ValidationMessageFor(x => x.Subject,"", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-12">

                            <div class="md-form">
                                @Html.TextAreaFor(x => x.Message, new { @class = "form-control md-textarea", rows = "2" })

                                <label for="Message">Your message</label>
                            </div>
                            @Html.ValidationMessageFor(x => x.Message,"", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!--Grid row-->



                    <div class="text-center text-md-right">
                        <input type="button" id="btnSubmit" class="btn btn-primary"  value="Submit"/>
                      
                    </div>
                </form>
            </div>
            <!--Grid column-->

        </div>

    </section>
    <!--Section: Contact v.2-->
</div>
@section scripts {
 
<script src="~/customJs/ContactJS.js"></script>
    }
